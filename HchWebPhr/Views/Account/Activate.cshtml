@using HchWebPhr.Models.FormModels

@model ActivateModel

<h3 class="page-header">建立帳號</h3>
<div class="row">
    <div class="col-xxxs-push-0 col-xxxs-12 col-xs-push-1 col-xs-10 col-sm-push-3 col-sm-6">
        <p class="lead"><span class="fa fa-caret-down"></span> 請輸入以下資訊：</p>
        <div class="row">
            <div class="col-xxxs-12">
                @using (Html.BeginForm("Activate",
                                       "Account",
                                       FormMethod.Post,
                                       new { @role = "form", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x=> x.Id,
                                    new { @id = Html.IdFor(x => x.Id), @class = "form-control" })
                    @Html.HiddenFor(x => x.IdNo,
                                    new { @id = Html.IdFor(x => x.IdNo), @class = "form-control" })
                    <div class="form-group">
                        @Html.LabelFor(x => x.Name,
                                           new { @class = "col-xxxs-12 col-sm-5 col-md-4 control-label" })
                        @if (ViewData.ModelState["Name"] != null && ViewData.ModelState["Name"].Errors.Count > 0)
                        {
                            <div class="col-xxxs-12 col-sm-7 col-md-8 has-error has-feedback">
                                @Html.TextBoxFor(x => x.Name,
                                                 new { @id = Html.IdFor(x => x.Name), @class = "form-control" })
                                <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                                <span id="inputError2Status" class="sr-only">(error)</span>
                            </div>
                        }
                        else
                        {
                            <div class="col-xxxs-12 col-sm-7 col-md-8">
                                @Html.TextBoxFor(x => x.Name,
                                                 new { @id = Html.IdFor(x => x.Name), @class = "form-control" })
                            </div>
                        }
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Email,
                                           new { @class = "col-xxxs-12 col-sm-5 col-md-4 control-label" })
                        @if (ViewData.ModelState["Email"] != null && ViewData.ModelState["Email"].Errors.Count > 0)
                        {
                            <div class="col-xxxs-12 col-sm-7 col-md-8 has-error has-feedback">
                                @Html.TextBoxFor(x => x.Email,
                                                 new { @id = Html.IdFor(x => x.Email), @class = "form-control" })
                                <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                                <span id="inputError2Status" class="sr-only">(error)</span>
                            </div>
                        }
                        else
                        {
                            <div class="col-xxxs-12 col-sm-7 col-md-8">
                                @Html.TextBoxFor(x => x.Email,
                                                 new { @id = Html.IdFor(x => x.Email), @class = "form-control" })
                            </div>
                        }
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.UserName,
                                           new { @class = "col-xxxs-12 col-sm-5 col-md-4 control-label" })
                        @if (ViewData.ModelState["UserName"] != null && ViewData.ModelState["UserName"].Errors.Count > 0)
                        {
                            <div class="col-xxxs-12 col-sm-7 col-md-8 has-error has-feedback">
                                @Html.TextBoxFor(x => x.UserName,
                                                 new { @id = Html.IdFor(x => x.UserName), @class = "form-control" })
                                <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                                <span id="inputError2Status" class="sr-only">(error)</span>
                            </div>
                        }
                        else
                        {
                            <div class="col-xxxs-12 col-sm-7 col-md-8">
                                @Html.TextBoxFor(x => x.UserName,
                                                 new { @id = Html.IdFor(x => x.UserName), @class = "form-control" })
                            </div>
                        }
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password,
                                           new { @class = "col-xxxs-12 col-sm-5 col-md-4 control-label" })
                        @if (ViewData.ModelState["Password"] != null && ViewData.ModelState["Password"].Errors.Count > 0)
                        {
                            <div class="col-xxxs-12 col-sm-7 col-md-8 has-error has-feedback">
                                @Html.PasswordFor(x => x.Password,
                                                    new { @id = Html.IdFor(x => x.Password), @class = "form-control" })
                                <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                                <span id="inputError2Status" class="sr-only">(error)</span>
                            </div>
                        }
                        else
                        {
                            <div class="col-xxxs-12 col-sm-7 col-md-8">
                                @Html.PasswordFor(x => x.Password,
                                                    new { @id = Html.IdFor(x => x.Password), @class = "form-control" })
                            </div>
                        }
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.RePassword,
                                           new { @class = "col-xxxs-12 col-sm-5 col-md-4 control-label" })
                        @if (ViewData.ModelState["RePassword"] != null && ViewData.ModelState["RePassword"].Errors.Count > 0)
                        {
                            <div class="col-xxxs-12 col-sm-7 col-md-8 has-error has-feedback">
                                @Html.PasswordFor(x => x.RePassword,
                                                 new { @id = Html.IdFor(x => x.RePassword), @class = "form-control" })
                                <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                                <span id="inputError2Status" class="sr-only">(error)</span>
                            </div>
                        }
                        else
                        {
                            <div class="col-xxxs-12 col-sm-7 col-md-8">
                                @Html.PasswordFor(x => x.RePassword,
                                                 new { @id = Html.IdFor(x => x.RePassword), @class = "form-control" })
                            </div>
                        }
                    </div>
                    if (ViewBag.ErrorCode != null)
                    {
                        <div class="form-group">
                            <div class="col-xxxs-12 col-md-4"></div>
                            <div class="col-xxxs-12 col-md-8">
                                <div class="alert alert-danger">
                                    <strong>錯誤:</strong>
                                    @(ViewBag.ErrorCode + " - " + ViewBag.ErrorMessage)
                                </div>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <div class="col-xxxs-12 col-md-4"></div>
                        <div class="col-xxxs-12 col-md-8" style="padding: 0px;">
                            <div class="col-xxxs-12 col-xxxs-push-0 col-md-8 col-md-push-2">
                                <button type="submit" class="btn btn-primary btn-block">帳號啟用</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
        $(function () {
            @foreach(KeyValuePair<String, ModelState> field in ViewData.ModelState)
                {
                    var field_id = field.Key;
                    var field_obj = field.Value;
                    var field_err = "";
                    foreach (ModelError Err in field_obj.Errors)
                    {
                        field_err = field_err + Err.ErrorMessage + "\\n";
                }
                <text>
                    $("#@field_id").popover({
                        animation: true,
                        content: '@field_err',
                        placement: 'top',
                        trigger: 'hover',
                        container: 'body'
                    });
                </text>
            }
        });
    </script>
}